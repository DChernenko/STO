@using STO.Domain.Entities
@using STO.WebUI.Models
@model  List<TypeCarViewModel>

@{
    ViewBag.Title = "Home Page";
}
@using STO.WebUI.Resources.View

<div class="form-group" id="baseControls">
    <label class="control-label col-md-2" for="TypeCar">@DetailsRes.CarType</label>
    <div class="col-sm-10">
        <select class="form-control text-box single-line" id="TypeCar" name="TypeCar">
            @foreach (var item in Model)
            {
                <option value="@Url.Action(item.UrlForm, "Home", null, Request.Url.Scheme)">@item.Name</option>
            }
        </select>
    </div>
</div>

<div id="typeCar"></div>

@section scripts{
    @Scripts.Render("~/scripts/Custom/TypeCar.js")
}