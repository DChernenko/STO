@using STO.WebUI.Resources.View
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container h-100">
        <div class="row">
            <div class="col-2 col-md-2 bg-info text-center">
                <div class="row btn-block">
                    @Html.ActionLink(@DetailsRes.AddCar, "Index", "Home", null, new { @class = "text-white active" })
                </div>
                <div class="row btn-block">
                    @Html.ActionLink(@DetailsRes.CarList, "ShowResult", "Home", null, new { @class = "text-white active" })
                </div>
            </div>
            <div class="col-10 col-md-10 bg-light">
                @RenderBody()
            </div>
            @*<div class="col-3 col-md-3 sidebar-offcanvas">*@
            @*@{Html.RenderAction("PViewTotalPrice", "Navigation"); }*@
            @*@{Html.Action("PViewTotalPrice", "Navigation"); }*@
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
